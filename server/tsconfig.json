{
  "compilerOptions": {
    "outDir": "./dist",   // Make sure this points to 'dist'
    "rootDir": "./src",   // Source files should be under 'src'
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "allowJs": true,

    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 
{
  "name": "astralis-server",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "dev": "nodemon --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "build": "tsc --outDir dist",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "setup:db": "ts-node-esm src/scripts/setupDb.ts",
    "setup:prod": "ts-node-esm src/scripts/setupProdDb.ts",
    "deploy": "yarn clean && yarn build && doctl apps create-deployment ef379f4b-ac1a-4752-814c-ae2281f15619"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "nodemailer": "^6.10.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}

{
  "name": "astralis-agency-server",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
     "build": "tsup",
    "start:server": "node dist/index.js",
    "dev": "nodemon --exec \"node --experimental-specifier-resolution=node --loader ts-node/esm\" src/index.ts",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --force",
    "create:admin": "node --experimental-specifier-resolution=node --loader ts-node/esm src/scripts/createAdmin.ts",
    "generate:jwt": "node --experimental-specifier-resolution=node --loader ts-node/esm src/scripts/generateJwtSecret.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "prisma": "^6.4.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsup": "^8.5.0"
  },
  "prisma": {
    "seed": "node --experimental-specifier-resolution=node --loader ts-node/esm ../prisma/seed.ts"
  }
}

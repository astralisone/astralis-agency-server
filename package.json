{
  "name": "astralis-agency",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:client\" \"yarn dev:server\"",
    "dev:client": "cd client && yarn dev",
    "dev:server": "cd server && yarn dev",
    "build": "yarn build:client && yarn build:server",
    "build:client": "cd client && yarn install && yarn build",
    "build:server": "cd server && yarn install && yarn clean && yarn build",
    "start": "cd server && yarn start",
    "start:prod": "NODE_ENV=production cd server && yarn start",
    "setup:db": "cd server && yarn setup:db",
    "deploy": "yarn build && yarn deploy:client && yarn deploy:server",
    "deploy:client": "cd client && yarn deploy",
    "deploy:server": "cd server && yarn deploy"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.0.0",
    "react-hook-form": "^7.54.2",
    "zod": "^3.24.2"
  }
}

{
  "name": "astralis-agency",
  "version": "1.0.0",
  "type": "module",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "tsx server.ts",
    "start:prod": "tsx server.ts",
    "generate:env": "node scripts/generate-client-env.js",
    "generate:server-env": "node scripts/generate-server-env.js",
    "prebuild:client": "yarn generate:env",
    "prebuild:server": "yarn generate:server-env",
    "build:client": "cd client && yarn build",
    "build:server": "cd server && yarn build",
    "build": "yarn build:client && yarn build:server",
    "dev": "yarn generate:server-env && PORT=4000 nodemon --exec tsx server.ts",
    "client:dev": "yarn generate:env && cd client && yarn dev",
    "server:dev": "yarn generate:server-env && PORT=4000 nodemon --exec tsx server.ts",
    "dev:all": "concurrently \"yarn server:dev\" \"yarn client:dev\"",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "cleanup": "rm -rf build && mkdir build && cd client && rm -rf dist",
    "postbuild": "cp -r client/dist/* build/",
    "seed": "tsx prisma/seed.ts",
    "create:admin": "tsx server/src/scripts/createAdmin.ts",
    "dev:enhanced": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build:enhanced": "npm run build:client && npm run build:server",
    "migrate:apply": "npx prisma db push && npx prisma generate",
    "test:marketplace": "cd server && npm run test -- --grep \"marketplace\""
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "prisma": "^6.4.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.5",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
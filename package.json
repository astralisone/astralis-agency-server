{
  "name": "astralis-agency",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "server"
  ],
  "scripts": {
    "start": "yarn && yarn workspace server start",
    "dev": "yarn workspace server dev",
    "build": "yarn workspace server build",
    "deploy:prod": "doctl apps create-deployment ef379f4b-ac1a-4752-814c-ae2281f15619 --wait",
    "deploy:staging": "doctl apps create-deployment YOUR_STAGING_APP_ID --wait",
    "logs:prod": "doctl apps logs ef379f4b-ac1a-4752-814c-ae2281f15619",
    "logs:staging": "doctl apps logs YOUR_STAGING_APP_ID",
    "deploy": "yarn build && yarn deploy:prod",
    "logs": "yarn logs:prod"
  },
  "devDependencies": {
    "zod": "^3.24.2",
    "doctl": "^1.92.1"
  },
  "dependencies": {
    "zod": "^3.24.2",
    "doctl": "^1.92.1"
  }
}

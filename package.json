{
  "name": "astralis-agency",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client"
  ],
  "scripts": {
    "prestart":"yarn setup && yarn build",
    "start": "nodemon server.js",
    "start:prod":"yarn setup && yarn build && node server.js",
    "dev": "nodemon server.js",
    "setup": "yarn install",
    "build": "yarn cleanup && cd client && yarn install && yarn build",
    "test": "jest",
    "test:watch": "jest --watch",
    "cleanup": "rm -rf build && mkdir build && cd client && rm -rf dist",
    "postbuild": "cp -r client/dist/* build/"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  }
}

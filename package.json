{
  "name": "astralis-agency",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:client\" \"yarn dev:server\"",
    "dev:client": "yarn dev --workspace=client",
    "dev:server": "yarn dev --workspace=server",
    "build": "yarn build:client && yarn build:server",
    "build:client": "cd client && npm install && yarn build",
    "build:server": "cd server && npm install && npx tsc",
    "start": "yarn start --workspace=server",
    "start:prod": "NODE_ENV=production yarn start",
    "setup:db": "yarn setup:db --workspace=server",
    "deploy:client": "cd client && yarn deploy",
    "deploy:server": "cd server && yarn deploy",
    "deploy": "yarn deploy:client && yarn deploy:server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.0.0",
    "react-hook-form": "^7.54.2",
    "zod": "^3.24.2"
  }
}

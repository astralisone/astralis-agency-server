RewriteEngine On


#RewriteCond %{REQUEST_URI} !\.(jpg|jpeg|png|gif|css)$ [NC]
#RewriteCond %{REQUEST_URI} !^/api
RewriteCond %{REQUEST_URI} !^/assets
RewriteCond %{REQUEST_URI} !^/index.html
#RewriteCond %{REQUEST_FILENAME} !-f  # Check if the file exists
#RewriteCond %{REQUEST_FILENAME} !-d  # Check if the directory exists
RewriteRule ^.*$ /index.html [L,R=301,NE]

# 404 handling (optional)
#ErrorDocument 404 /404.html # Assuming you have a 404.html file
